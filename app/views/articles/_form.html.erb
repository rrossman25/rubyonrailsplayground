<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, "title", class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "enter the title of the article"%>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :description, "description",  class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "enter a description of the article" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :category, "categories", class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "choose categories from below (can stay empty)" }, { multiple: true, class: "form-select shadow rounded" })%>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "save", class:"btn btn-outline-success btn-lg w-25 col-10" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to 'cancel and return to articles', articles_path, class:"text-light text-decoration-none"%>
      </div>
    </div>
  </div>
</div>
