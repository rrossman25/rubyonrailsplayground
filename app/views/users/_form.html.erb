<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-white rounded") do |f| %>
        <div class="form-group row mb-3">
          <%= f.label "username", :username, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, placeholder: "enter a username", class:"form-control shadow rounded"%>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label "email", :email, class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "enter a valid email address" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label "password", :password, class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "enter a password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "sign up" : "update", class:"btn btn-outline-success btn-lg w-25") %>
        </div>
      <% end %>
      <% if logged_in? %>
        <div class="text-center">
          <%= link_to 'cancel and return to articles', articles_path, class:"text-light text-decoration-none"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
