<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-gray rounded") do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, placeholder: "enter a username", class:"form-control shadow rounded"%>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :email, class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "enter a valid email address" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :password, class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "enter a password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class:"btn btn-outline-success btn-lg w-25" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to 'cancel and return to articles', articles_path, class:"text-success text-decoration-none"%>
      </div>
    </div>
  </div>
</div>
