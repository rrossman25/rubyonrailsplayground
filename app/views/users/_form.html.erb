<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true) do |f| %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: "Enter a username" %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Enter a valid email address" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Enter a password" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>