<div class="container">
  <h1 class="text-center mt-4">category: <%= @category.name.downcase %></h1>
  <% if logged_in? && current_user.admin?%>
    <div class="text-center mt-4">
      <%= link_to "edit category", edit_category_path(@category), class: "btn btn-outline-info" %>
    </div>
  <% end %>
  <h3 class="text-center mt-4">articles</h3>
  <%= render 'articles/article'%>
  <div class="flickr_pagination mt-3">
    <%= will_paginate @articles, :container => false %>
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
  </div>
</div>
